body, html {
  line-height: 1;
  font-family: Microsoft YaHei, PingFang SC, Core Sans N, Avenir Next, Helvetica Neue, Helvetica,Arial, Source Han Sans SC, Hiragino Sans GB, WenQuanYi MicroHei, sans-serif;
  color: #333333;
  background-color: #FFFFFF;
  width: 100%;
  height: 100%;
}
::-webkit-scrollbar {
  width: 9px;
  height: 9px;
}
::-webkit-scrollbar-thumb {
  border-radius: 4px;
  background-color: #ccc
}
::-webkit-scrollbar-track {
  background-color: #eee
}

.ant-form-item {
  margin-bottom: 12px;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.relative {
  position: relative
}
.hidden-input {
  position: absolute;
  visibility: hidden;
  opacity: 0;
  top: -1px;
  left: -1px;
  width: 1px;
  height: 1px;
}

@keyframes donut-spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
.xuanzhuan {
  display: inline-block;
  animation: donut-spin 2s linear infinite;
}

.user-form {
  .sms-code {
    font-size: 14px;
    color: #BBBBBB;
    cursor: not-allowed;
    padding: 8px 20px;
    text-align: center;
    background: #EEEEEE;
    border-radius: 16px;
  }
  .sms-code-count {
    color: #ffffff!important;
    background: #4285F6!important;
    cursor: pointer;
  }
  .ant-form-item {
    margin-bottom: 28px;
  }
  .ant-input {
    height: 48px;
    border: 1px solid #EEEEEE;
  }
  .ant-input {
    border-radius: 24px;
  }
  .submit-btn {
    width: 100%;
    border-radius: 24px;
    height: 42px;
    font-size: 20px;
  }
  .ant-form-explain {
    margin-top: 4px;
  }
}
.modal-footer {
  display: flex;
  justify-content: center;
}
.ant-modal-header {
  background: #F8F8F8;
}
.ant-form-item-label {
  font-weight: 600;
  color: #333333;
}